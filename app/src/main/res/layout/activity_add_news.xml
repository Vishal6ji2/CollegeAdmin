<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddNewsActivity"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowbackblack"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add News"
                android:textSize="18sp"
                android:textColor="@color/colorverydarkgrey"
                android:textStyle="bold"/>

        </com.google.android.material.appbar.MaterialToolbar>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/addnews_cmpimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/directorimg"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addnews_fabcam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:backgroundTint="@android:color/white"
            android:src="@drawable/cameraicon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/addnews_edttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textColor="@color/colorverydarkgrey"
            android:maxLines="1"
            android:maxLength="30"/>

        <TextView
            android:id="@+id/addnews_txttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/30"
            android:gravity="end"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/addnews_edtnews"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="News"
            android:textColor="@color/colorverydarkgrey"
            android:maxLines="1"
            android:maxLength="30"
            android:gravity="start"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/addnews_btnpost"
            android:text="post"
            app:backgroundTint="@color/colorPrimaryDark"/>

    </LinearLayout>

</LinearLayout>