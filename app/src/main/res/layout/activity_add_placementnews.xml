<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddPlacementnewsActivity"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/addplacement_toolbar">


            <ImageView
                android:id="@+id/addplacement_backimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowbackblack"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Placement news"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorverydarkgrey"/>

        </com.google.android.material.appbar.MaterialToolbar>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/addplacement_cmpimg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/directorimg"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addplacement_fabcam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            app:backgroundTint="@android:color/white"
            android:src="@drawable/cameraicon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <EditText
                android:id="@+id/addplacement_edtcmpname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company name"
                android:maxLines="1"
                android:maxLength="15"
                android:textColor="@color/colorverydarkgrey"/>

            <TextView
                android:id="@+id/addplacement_txtcmpname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/15"
                android:gravity="end"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/addplacement_edttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Placement title"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/colorverydarkgrey"/>

            <TextView
                android:id="@+id/addplacement_txttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/30"
                android:gravity="end"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/addplacement_edtlink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Related link"
                android:maxLines="1"
                android:textColor="@color/colorAccent"/>

            <EditText
                android:id="@+id/addplacement_edtnews"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="start"
                android:hint="Placement news"
                android:textColor="@color/colorverydarkgrey" />

            <EditText
                android:id="@+id/addplacement_edtbyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="By:"
                android:maxLines="1"
                android:textColor="@color/colorverydarkgrey"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addplacement_btnpost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="post"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_margin="20dp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>