<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/customplacement_cmpname"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@color/colorlightgray"/>

        <View
            android:id="@+id/customplacement_cmptitle"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@color/colorlightgray"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_toEndOf="@id/customplacement_cmpname"/>

        <TextView
            android:id="@+id/customplacement_cmpnews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customplacement_cmpname"
            android:background="@color/colorlightgray"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5sdp"/>


        <TextView
            android:id="@+id/customplacement_cmpnewstwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customplacement_cmpnews"
            android:background="@color/colorlightgray"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/customplacement_txtadmin"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_below="@id/customplacement_cmpnewstwo"
            android:layout_alignParentStart="true"
            android:background="@color/colorlightgray"
            android:layout_marginTop="@dimen/_5sdp"/>

        <View
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_13sdp"
            android:background="@color/colorlightgray"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/customplacement_txtadmin"
            android:layout_alignTop="@id/customplacement_txtadmin"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>