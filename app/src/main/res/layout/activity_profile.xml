<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profile_backimg"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/arrowback"
                    android:layout_centerVertical="true"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:gravity="center"
                    android:fontFamily="@font/cc_semibold"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/white"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_profileimg"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/profilefive"
            android:layout_gravity="center"
            android:background="@color/colorlightgray"
            android:layout_centerInParent="true"
            app:shapeAppearanceOverlay="@style/circleimage"
            android:transitionName="profile"
            tools:ignore="UnusedAttribute" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/profile_fabadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:layout_alignBottom="@id/profile_profileimg"
            android:layout_alignEnd="@id/profile_profileimg"
            app:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/addicon"
            app:tint="@android:color/white"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_4sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

            <!--<ImageView
                android:id="@+id/profile_nameeditimg"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>-->

            </RelativeLayout>


            <TextView
                android:id="@+id/profile_txtname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal Kumavat"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorverydarkgrey"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branch"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_13ssp"
                android:padding="@dimen/_4sdp"/>

<!--
            <ImageView
                android:id="@+id/profile_brancheditimg"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
-->

            </RelativeLayout>

            <TextView
                android:id="@+id/profile_txtbranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computer Science &amp; Engineering"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorverydarkgrey"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email-id"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13ssp"
                    android:padding="@dimen/_4sdp"/>

                <ImageView
                    android:id="@+id/profile_emaileditimg"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/editicon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/profile_txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vishal6kumavat7@gmail.com"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorverydarkgrey"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone/mob no."
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_13ssp"
                    android:padding="@dimen/_4sdp"/>

                <ImageView
                    android:id="@+id/profile_mobeditimg"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/editicon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/profile_txtmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+917239973921"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorverydarkgrey"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>